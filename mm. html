<body>

  <img id="sticker" src="STICKER.png" />
  <div id="msg">Try to catch me üòà</div>

  <script>
    const img = document.getElementById("sticker");

    function moveSticker() {
      const x = Math.random() * (window.innerWidth - 220);
      const y = Math.random() * (window.innerHeight - 220);
      img.style.left = x + "px";
      img.style.top = y + "px";
    }

    img.addEventListener("mouseenter", moveSticker);
    img.addEventListener("click", moveSticker);

    // start position
    moveSticker();
  </script>

</body>
